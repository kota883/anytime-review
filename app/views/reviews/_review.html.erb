<div class="shadow-lg card review-card">
<%= link_to review_path(review) do %>
  <div class="card-body">
		<div class="d-flex text-white">
			<div class="store-name text-secondary">
				<p>店舗名</p>
				<h4><%= review.store_name %></h4>
				<h6>参考になった数<h6>
				<h5>→<%= review.liked_users.count %><h5>
			</div>
			<div class="user-date pl-2 pt-3 text-secondary">
				<p><%= review.user.age.name %></p>
				<p><%= review.user.gender.name %></p>
			</div>
			<div class="review-date pl-2 text-secondary">
				<p>＜設備の充実度＞</p>
				<p class="ml-3"><%= review.facility.name %></p>
			</div>
			<div class="review-text pl-2 text-secondary">
				<p>＜口コミ＞</p>
				<p><%= review.text %></p>
			</div>
		</div>  
	</div>
<% end %>	
</div>